<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.andre.lenguasnativascolombia.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="495dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:weightSum="1"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Departamento"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="32dp"
            android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/buscar"
        android:onClick="hola"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="110dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        card_view:cardBackgroundColor="#7CACFF"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDepartamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta aplicaciÃ³n permite ver las diferentes lenguas del pais colombiano."
                android:textAlignment="center"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvNumHabit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="247dp" />

            <TextView
                android:id="@+id/tvNombreLengua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.91"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/tvDescrip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:textAlignment="textStart" />

    </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnAcerca"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:background="@drawable/info"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="445dp" />

</LinearLayout>